<mvc:View controllerName="com.acc.trainingTestDemo.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m">
	
	<ScrollContainer
		height="100%"
		width="100%"
		horizontal="true"
		vertical="true"
		focusable="true">
	<Table id="idProductsTable"
		inset="false"
		growing="true"
		items="{
			path: '/SOASearchResultSet',
			sorter: {
				path: 'SoaIdRes'
			}
		}">
		<headerToolbar>
			<Toolbar>
				<Title text="SOA Results" level="H2"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column
				width="12em">
				<Text text="SOA ID" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Customer" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Right">
				<Text text="Start Date" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center">
				<Text text="End Date" />
			</Column>
			<Column
				hAlign="Center">
				<Text text="Customer Number" />
			</Column>
			<Column
				hAlign="Center">
				<Text text="Status" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier
						text="{SoaIdRes}"/>
					<Text
						text="{ApplicantNameRes}" />
					<Text
						text="{ValidFromRes}" />
						<Text
						text="{ValidToRes}" />
						<Text
						text="{ApplicantRes}" />
						<Text
						text="{StatusRes}" />
					<!--<ObjectNumber-->
					<!--	number="{WeightMeasure}"-->
					<!--	unit="{WeightUnit}"-->
					<!--	state="{-->
					<!--		path: 'WeightMeasure',-->
					<!--		formatter: 'sap.m.sample.Table.Formatter.weightState'-->
					<!--	}" />-->
					<!--<ObjectNumber-->
					<!--		number="{-->
					<!--			parts:[{path:'Price'},{path:'CurrencyCode'}],-->
					<!--			type: 'sap.ui.model.type.Currency',-->
					<!--			formatOptions: {showMeasure: false}-->
					<!--		}"-->
					<!--		unit="{CurrencyCode}" />-->
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	</ScrollContainer>
</mvc:View>