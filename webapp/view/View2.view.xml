<mvc:View
	height="100%"
	controllerName="sap.m.sample.ObjectHeaderResponsiveIII.Page"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<Page
	title="{i18n>detailPageTitle}">
	<ObjectHeader
		id="oh1"
		responsive="true"
		fullScreenOptimized="true"
		binding="{/ProductCollection/2}"
		icon="{ProductPicUrl}"
		iconAlt="{Name}"
		intro="{Description}"
		title="{Name}"
		titleActive="true"
		titlePress="handleTitlePress"
		number="{
			parts:[{path:'Price'},{path:'CurrencyCode'}],
			type: 'sap.ui.model.type.Currency',
			formatOptions: {showMeasure: false}
		}"
		numberUnit="{CurrencyCode}"
		showMarkers="true"
		markFlagged="true"
		markFavorite="true"
		numberState="Success"
		backgroundDesign="Translucent">
		<attributes>
			<ObjectAttribute
				title="SoaID"
				text="{SoaID}"/>
			<ObjectAttribute
				title="SOA Description"
				text="{SOADescription}"
				active="true"/>
			<ObjectAttribute
				title="Status"
				text="{Status}"/>
		</attributes>
		<statuses>
 			<ObjectStatus
				title="Approval"
				text="Pending"
				state="Warning"/>
		</statuses>
		<headerContainer>
			<IconTabBar
				id="itb1"
				selectedKey="key3"
				upperCase="true"
				class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter
						icon="sap-icon://hint">
						<Text text="Info content goes here ..." />
					</IconTabFilter>
					<IconTabFilter
						icon="sap-icon://attachment"
						count="3">
						<Text text="Attachments go here ..." />
					</IconTabFilter>
					<IconTabFilter
						icon="sap-icon://notes"
						count="12">
						<Text text="Notes go here ..." />
					</IconTabFilter>
					<IconTabFilter
						icon="sap-icon://group">
						<Text text="People content goes here ..." />
					</IconTabFilter>
				</items>
			</IconTabBar>
		</headerContainer>
	</ObjectHeader>
	</Page>
</mvc:View>