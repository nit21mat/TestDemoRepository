<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout" xmlns:forms="sap.ui.layout.form" xmlns="sap.m">
	<Table id="SSPTable" inset="false" growing="true" growingThreshold="10" growingScrollToLoad="false"
	items="{soaModel>SSPHeaderDetailsSet}">
		<columns>
			<Column width="12em">
				<Text text="SSP No"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Description"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
				<Text text="Start Date"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
				<Text text="End Date"/>
			</Column>
			<Column hAlign="Center">
				<Text text="Status"/>
			</Column>
			<Column hAlign="Center">
				<Text text="SOA Ref"/>
			</Column>
			<Column hAlign="Center">
				<Text text="Status Desc"/>
			</Column>
			<Column hAlign="Center">
				<Text text="Amount"/>
			</Column>
			<Column hAlign="Center">
				<Text text="Eligibility Status"/>
			</Column>
			<Column hAlign="Center">
				<Text text="Emp Resp No"/>
			</Column>
			<Column hAlign="Center">
				<Text text="Emp Resp Name"/>
			</Column>
			<Column hAlign="Center">
				<Text text="DBA Link"/>
			</Column>
			<Column hAlign="Center">
				<Text text="DBA Status"/>
			</Column>
			<Column hAlign="Center">
				<Text text="DBA Status Desc"/>
			</Column>
			<Column hAlign="Center">
				<Text text="Applicant No"/>
			</Column>
			<Column hAlign="Center">
				<Text text="Applicant Name"/>
			</Column>
			<Column hAlign="Center">
				<Text text="SOA Ref"/>
			</Column>
			<Column hAlign="Center">
				<Text text="Case No"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier text="{soaModel>Sspid}"/>
					<Text text="{soaModel>Description}"/>
					<Text text="{ path : 'soaModel>Datecontstart', type : 'sap.ui.model.type.Date', formatOptions : { style : 'medium' } }"/>
					<Text text="{ path : 'soaModel>Datecontend', type : 'sap.ui.model.type.Date', formatOptions : { style : 'medium' } }"/>
					<Text text="{soaModel>SspStatus}"/>
					<Text text="{soaModel>SspStatusText}"/>
					<Text text="{soaModel>Amount}"/>
					<Text text="{soaModel>Eligstatus}"/>
					<Text text="{soaModel>EmployeeResponsibleId}"/>
					<Text text="{soaModel>EmployeeResponsibleName}"/>
					<Text text="{soaModel>Dbalink}"/>
					<Text text="{soaModel>DbaStatus}"/>
					<Text text="{soaModel>DbaStatusText}"/>
					<Text text="{soaModel>Applicant}"/>
					<Text text="{soaModel>ApplicantName}"/>
					<Text text="{soaModel>Soaref}"/>
					<Text text="{soaModel>Caselink}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>