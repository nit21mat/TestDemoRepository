<Table id="SSPTable" inset="false" growing="true" growingThreshold="10" growingScrollToLoad="false"
			items="{ path: '/SOASearchResult_SSPHeaderDetails', sorter: { path: 'SoaIdRes' } }">
			<columns>
				<Column width="12em">
					<Text text="SSP No"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Description"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
					<Text text="Start Date"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Text text="End Date"/>
				</Column>
				<Column hAlign="Center">
					<Text text="Status"/>
				</Column>
				<Column hAlign="Center">
					<Text text="SOA Ref"/>
				</Column>
				<Column hAlign="Center">
					<Text text="Status Desc"/>
				</Column>
				<Column hAlign="Center">
					<Text text="Amount"/>
				</Column>
				<Column hAlign="Center">
					<Text text="Eligibility Status"/>
				</Column>
				<Column hAlign="Center">
					<Text text="Emp Resp No"/>
				</Column>
				<Column hAlign="Center">
					<Text text="Emp Resp Name"/>
				</Column>
				<Column hAlign="Center">
					<Text text="DBA Link"/>
				</Column>
				<Column hAlign="Center">
					<Text text="DBA Status"/>
				</Column>
				<Column hAlign="Center">
					<Text text="DBA Status Desc"/>
				</Column>
				<Column hAlign="Center">
					<Text text="Applicant No"/>
				</Column>
				<Column hAlign="Center">
					<Text text="Applicant Name"/>
				</Column>
				<Column hAlign="Center">
					<Text text="SOA Ref"/>
				</Column>
				<Column hAlign="Center">
					<Text text="Case No"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem type="Navigation" press="onSelectionChange">
					<cells>
						<ObjectIdentifier text="{Sspid}"/>
						<Text text="{Description}"/>
						<Text text="{ path : 'Datecontstart', type : 'sap.ui.model.type.Date', formatOptions : { style : 'medium' } }"/>
						<Text text="{ path : 'Datecontend', type : 'sap.ui.model.type.Date', formatOptions : { style : 'medium' } }"/>
						<Text text="{SspStatus}"/>
						<Text text="{SspStatusText}"/>
						<Text text="{Amount}"/>
						<Text text="{Eligstatus}"/>
						<Text text="{EmployeeResponsibleId}"/>
						<Text text="{EmployeeResponsibleName}"/>
						<Text text="{Dbalink}"/>
						<Text text="{DbaStatus}"/>
						<Text text="{DbaStatusText}"/>
						<Text text="{Applicant}"/>
						<Text text="{ApplicantName}"/>
						<Text text="{Soaref}"/>
						<Text text="{Caselink}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	<!--</forms:SimpleForm>-->
</mvc:View>